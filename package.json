{
  "private": true,
  "name": "ilher.dev",
  "description": "",
  "license": "",
  "scripts": {
    "build": "remix build",
    "dev": "concurrently \"remix dev\" \"yarn watch:css\"",
    "postinstall": "remix setup node && yarn build:css",
    "deploy": "flyctl deploy --build-arg REMIX_TOKEN=${REMIX_TOKEN}",
    "start": "remix-serve build",
    "watch:css": "postcss styles --base styles --dir app/styles -w",
    "build:css": "postcss styles --base styles --dir app/styles --env production",
    "check:types": "tsc -b",
    "check:lint": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache --ext js,jsx,ts,tsx .",
    "validate": "./scripts/check-app",
    "prepare": "husky install"
  },
  "dependencies": {
    "@remix-run/react": "^1.0.5",
    "@remix-run/serve": "^1.0.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.0.5"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.0.5",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/tailwindcss": "^2.2.4",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^6.4.0",
    "eslint": "^8.3.0",
    "eslint-config-airbnb": "^19.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "postcss": "^8.3.11",
    "postcss-cli": "^9.0.2",
    "prettier": "^2.4.1",
    "tailwindcss": "^2.2.19",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
