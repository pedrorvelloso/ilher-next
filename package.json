  "scripts": {
    "build": "npm run build:css && remix build",
    "prebuild": "npm run clear",
    "dev": "pm2-dev ./scripts/pm2.config.js",
    "postinstall": "remix setup node",
    "predeploy": "npm run clear",
    "deploy": "fly deploy --remote-only",
    "start": "remix-serve build",
    "start:dev": "remix dev",
    "watch:css": "postcss styles --base styles --dir app/styles -w",
    "build:css": "postcss styles --base styles --dir app/styles --env production",
    "check:types": "tsc -b",
    "check:lint": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache --ext js,jsx,ts,tsx .",
    "validate": "./scripts/check-app",
    "prepare": "husky install",
    "clear": "rimraf build public/build \"./app/styles/**/*.css\""
  },
  "dependencies": {
    "@remix-run/react": "^1.1.3",
    "@remix-run/serve": "^1.1.3",
    "@tailwindcss/aspect-ratio": "^0.4.0",
